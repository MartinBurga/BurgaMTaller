<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgaMTaller.views.FlexPage"
             Title="FlexPage">
    <VerticalStackLayout>
        <FlexLayout
            Direction="Row"
            JustifyContent="SpaceAround"
            AlignItems="Center"
            AlignContent="Center"
            Wrap="Wrap">
            <Button
                Text="Button 1"
                BackgroundColor="Green"
                WidthRequest="100"
                HeightRequest="50"
                />
            <Button
                Text="Button 2"
                BackgroundColor="Red"
                WidthRequest="100"
                HeightRequest="50"
                />
            <Button
                Text="Button 3"
                BackgroundColor="Gray"
                WidthRequest="100"
                HeightRequest="50"
                />
            <Button
                Text="Button 4"
                WidthRequest="100"
                HeightRequest="50"
                />
        </FlexLayout>
        <Button
            x:Name="AbsolutePage"
            Text="Ir a Absolute"
            Clicked="AbsolutePage_Clicked"
            HorizontalOptions="Center"
            Margin="0,10"
            BackgroundColor="#266fbc"
            FontAttributes="Bold"
            />
    </VerticalStackLayout>
</ContentPage>
